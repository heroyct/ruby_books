<p id="notice"><%= notice %></p>

<h1 class="text-center">書籍一覧</h1>

<div class="container">
<table class="table table-striped table-hover"> 
  <thead>
    <tr>
      <th>名前</th>
      <th>作者</th>
      <th>出版日</th>
　　　<th>人気度</th>
      <th colspan="3" class="col-md-3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.publish_format() %></td>
        <td><%= book.popular_format() %></td>
        <td><%= link_to '詳細', book %></td>
        <td><%= link_to '編集', edit_book_path(book) %></td>
        <td><%= link_to '削除', book, method: :delete, data: { confirm: '削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="container">
<br>

<%= link_to '新規追加', new_book_path, {class: "btn btn-success", style: "color:white;"} %>
</div>
